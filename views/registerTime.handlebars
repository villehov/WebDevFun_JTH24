
<div class="registerTimeContainer">
    
    <form class="registerTimeForm" action="registerTime" method="POST"> 
        
        <h2 id="registerTimeHeader">
            Hello {{user.username}}, on this page you register your time.
        </h2>
        
        <label for="noHours"># hours</label>
        <input type="number" name="noHours" required="required" min="0" max="24">

        <label for="inputDate">Date</label>
        <input id="inputDate" type="date" name="inputDate" required="required" min="2000-01-01" >

        <input type="submit" value="Create time-post">
    </form>

</div>

{{!-- Get todays date to set as max attribute in inputDate input --}}
<script> 
    function dateTime() {
        const today = new Date();
        const day = String(today.getDate());
        const month = String(today.getMonth() + 1).padStart(2,'0');
        const year = String(today.getFullYear());
        const date = `${year}-${month}-${day}`;
        console.log('date: ' + date);

        document.getElementById('inputDate').max = date;
    }
    window.onload = dateTime;
</script>